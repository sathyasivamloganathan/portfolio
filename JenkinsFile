pipeline {
    agent any

    environment {
        GIT_USER_EMAIL = "sathyasivamloganathan@gmail.com"
        GIT_USER_NAME = "sathyasivamloganathan"
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Configure Git') {
            steps {
                bat """
                    git config --global user.email "%GIT_USER_EMAIL%"
                    git config --global user.name "%GIT_USER_NAME%"
                """
            }
        }

        stage('Clean gh-pages Branch') {
            steps {
                bat '''
                git fetch origin gh-pages || echo "No remote gh-pages branch"
                git checkout -b gh-pages || git checkout gh-pages
                git reset --hard origin/dev
                git push origin gh-pages --force
                '''
            }
        }


        stage('Deploy to GitHub Pages') {
            steps {
                bat 'npx gh-pages -d dist -b gh-pages -f'
            }
        }
    }

    post {
        success {
            echo 'Build and deploy succeeded!'
        }
        failure {
            echo 'Build or deploy failed.'
        }
    }
}
