pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Configure Git') {
            steps {
                bat 'git config --global user.email "youremail@example.com"'
                bat 'git config --global user.name "Your Name"'
            }
        }

        stage('Clean gh-pages Branch') {
            steps {
                bat '''
                set GIT_TERMINAL_PROMPT=0
                git remote set-url origin https://<your_token>@github.com/sathyasivamloganathan/portfolio.git
                git push origin --delete gh-pages || echo "No remote gh-pages branch to delete"
                '''
            }
        }

        stage('Deploy to GitHub Pages') {
            steps {
                bat 'npx gh-pages -d dist -b gh-pages -f'
            }
        }


    }

    post {
        failure {
            echo 'Build or deploy failed.'
        }
    }
}
