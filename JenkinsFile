pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }
        stage('Configure Git') {
            steps {
                bat 'git config --global user.email "sathyasivamloganathan@gmail.com"'
                bat 'git config --global user.name "Sathya Sivam Loganathan"'
            }
        }
        stage('Clean gh-pages branch') {
            steps {
                script {
                    // Delete local gh-pages branch, ignore failure if branch doesn't exist
                    def cleanBranchCmd = 'git branch -D gh-pages || echo "No local gh-pages branch to delete"'
                    bat cleanBranchCmd
                }
            }
        }
        stage('Deploy to GitHub Pages') {
            steps {
                // Run your deploy command here, example:
                bat 'npx gh-pages -d dist --branch=gh-pages'
            }
        }
    }
    post {
        failure {
            echo 'Build failed.'
        }
        success {
            echo 'Build and deploy succeeded!'
        }
    }
}
