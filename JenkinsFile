pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }
        stage('Configure Git') {
            steps {
                bat 'git config --global user.email "youremail@example.com"'
                bat 'git config --global user.name "Your Name"'
            }
        }
        stage('Clean gh-pages branch') {
            steps {
                script {
                    // Try to delete local gh-pages ref and branch, ignore errors
                    bat '''
                        git update-ref -d refs/heads/gh-pages || echo No gh-pages ref to delete
                        git branch -D gh-pages || echo No gh-pages branch to delete
                    '''
                }
            }
        }
        stage('Deploy to GitHub Pages') {
            steps {
                // Deploy dist folder to gh-pages branch
                bat 'npx gh-pages -d dist --branch=gh-pages'
            }
        }
    }
    post {
        failure {
            echo 'Build or deploy failed.'
        }
        success {
            echo 'Build and deploy succeeded!'
        }
    }
}
