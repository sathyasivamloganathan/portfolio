pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'dev', url: 'https://github.com/sathyasivamloganathan/portfolio.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        // âœ… New Stage: Security audit and automatic fixes
        stage('Audit & Fix Vulnerabilities') {
            steps {
                bat(script: 'npm audit fix', returnStatus: true)
            }
        }


        stage('Build Project') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Configure Git') {
            steps {
                bat 'git config --global user.email "sathyasivamloganathan@gmail.com"'
                bat 'git config --global user.name "Sathya Sivam Loganathan"'
            }
        }

        stage('Deploy to GitHub Pages') {
            steps {
                bat 'npm run deploy'
            }
        }
    }
}
