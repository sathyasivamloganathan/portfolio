pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }
        stage('Configure Git') {
            steps {
                bat 'git config --global user.email "youremail@example.com"'
                bat 'git config --global user.name "Your Name"'
            }
        }
        stage('Clean gh-pages branch') {
            steps {
                script {
                    def result = bat(returnStatus: true, script: 'git branch -D gh-pages')
                    if (result != 0) {
                        echo 'No local gh-pages branch to delete'
                    }
                }
            }
        }
        stage('Deploy to GitHub Pages') {
            steps {
                // Deploy dist folder to gh-pages branch
                bat 'npx gh-pages -d dist --branch=gh-pages'
            }
        }
    }
    post {
        failure {
            echo 'Build or deploy failed.'
        }
        success {
            echo 'Build and deploy succeeded!'
        }
    }
}
