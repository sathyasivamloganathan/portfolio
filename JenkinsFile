pipeline {
    agent any

    environment {
        GIT_USER_EMAIL = "sathyasivamloganathan@gmail.com"
        GIT_USER_NAME = "sathyasivamloganathan"
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Configure Git') {
            steps {
                bat """
                    git config --global user.email "%GIT_USER_EMAIL%"
                    git config --global user.name "%GIT_USER_NAME%"
                """
            }
        }

        stage('Clean gh-pages Branch') {
            steps {
                bat '''
                    git push origin --delete gh-pages || echo No remote gh-pages branch to delete
                    git fetch --prune
                    git branch -D gh-pages || echo No local gh-pages branch to delete
                    git update-ref -d refs/heads/gh-pages || echo No local gh-pages ref to delete
                '''
            }
        }

        stage('Deploy to GitHub Pages') {
            steps {
                bat 'npx gh-pages -d dist -b gh-pages -f'
            }
        }
    }

    post {
        success {
            echo 'Build and deploy succeeded!'
        }
        failure {
            echo 'Build or deploy failed.'
        }
    }
}
